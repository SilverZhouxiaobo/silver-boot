    <update id="updateUserAvatar" parameterType="cn.silver.framework.system.domain.SysUser">
        update sys_user
        set avatar = #{avatar}
        where user_name = #{userName}
    </update>

    <update id="resetUserPwd" parameterType="cn.silver.framework.system.domain.SysUser">
        update sys_user
        set password = #{password}
        where user_name = #{userName}
    </update>

    <delete id="deleteUserById" parameterType="java.lang.String">
        update sys_user
        set deleted = '2'
        where id = #{id}
    </delete>

    <delete id="deleteUserByIds" parameterType="java.lang.String">
        update sys_user set deleted = '2' where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectUserByRoleId" parameterType="java.lang.String" resultMap="SysUserResult">
        <include refid="selectUserVo"/>
        where r.id = #{roleId}
    </select>
</mapper>
